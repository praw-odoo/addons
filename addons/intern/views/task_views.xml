<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="intern_intern_search" model="ir.ui.view">
            <field name="name">intern.intern.search</field>
            <field name="model">intern.intern</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="defination"/>
                    <field name="college"/>
                    <field name="position"/>
                    <filter string="developer" name="developer" domain="[('position','=','developer')]"/>
                    <filter string="analyst" name="analyst" domain="[('position','=','analyst')]"/>
                    <group>
                        <filter string="position" name="position" context="{'group_by':'position'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="intern_intern_tree" model="ir.ui.view">
            <field name="name">intern.intern.tree</field>
            <field name="model">intern.intern</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="position"/>
                    <field name="college"/>
                    <field name="defination"/>
                    <field name="instructor_id"/>
                    <field name="stipend"/>
                    <field name="date_join"/>
                    <field name="date_comp"/>
                </tree>
            </field>
        </record>

        <record id="intern_intern_form" model="ir.ui.view">
            <field name="name">intern.intern.form</field>
            <field name="model">intern.intern</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="position"/>
                            <field name="college"/>
                            <field name="defination"/>
                        </group>
                        <group>
                        <field name="instructor_id"/>
                            <field name="stipend"/>
                            <field name="date_join"/>
                            <field name="date_comp"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Task</field>
            <field name="res_model">intern.intern</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- <menuitem id="intern_root" name="Intern">
            <menuitem id="task" name="task">
                <menuitem id="task_root" name="task" action="action_property"/>
            </menuitem>
        </menuitem> -->

    </data>
</odoo>
