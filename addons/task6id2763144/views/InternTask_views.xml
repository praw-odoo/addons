<?xml version='1.0' encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_task6" model="ir.ui.view">
            <field name="name">view.partner.form.inherit.task6</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="product.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_product_pricelist']" position="after">
                    <field name="days_to_deliver"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_form_inherit_task6" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.task6</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_policy']" position="after">
                    <field name="appointment_date"/>
                </xpath>
            </field>
        </record>

        <record id="inventory_inherit_task6" model="ir.ui.view">
            <field name="name">inventory.form.inherit.task6</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="appointment_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>