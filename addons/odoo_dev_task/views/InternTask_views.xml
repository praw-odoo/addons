<?xml version='1.0' encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_task6" model="ir.ui.view">
            <field name="name">view.partner.form.inherit.task6</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_product_pricelist']" position="after">
                    <field name="days_to_deliver"/>
                </xpath>
            </field>
        </record>

        <record id="sale_order_form_inherit_task6" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.task6</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_policy']" position="after">
                    <field name="appointment_date"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="zero_stock_approval"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>