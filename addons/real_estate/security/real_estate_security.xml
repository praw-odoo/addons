<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_real_estate">
            <field name="name">Estate</field>
            <field name="description">helps to handle buying and selling</field>
            <field name="sequence">10</field>
        </record>

        <record model="ir.module.category" id="module_category_real_estate2">
            <field name="name">Real Estate</field>
            <field name="description">helps to manage buying and selling</field>
            <field name="parent_id" ref="module_category_real_estate"/>
        </record>

        <!-- Access Rights -->
        <record id="group_real_estate_buyer" model="res.groups">
            <field name="name">buyer</field>
            <field name="category_id" ref="module_category_real_estate2"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_real_estate_seller" model="res.groups">
            <field name="name">seller</field>
            <field name="category_id" ref="module_category_real_estate2"/>
            <field name="implied_ids" eval="[(4, ref('group_real_estate_buyer'))]"/>
        </record>

        <record id="group_real_estate_admin_user" model="res.groups">
            <field name="name">Administraror</field>
            <field name="category_id" ref="module_category_real_estate2"/>
            <field name="implied_ids" eval="[(4, ref('group_real_estate_seller'))]"/>
        </record>


        <!-- Record Rules -->
        <record id="real_estate_property_rule_buyer" model="ir.rule">
            <field name="name">Buyer Property</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[('buyer_id','=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('real_estate.group_real_estate_buyer'))]"/>
        </record>

        
        <record id="real_estate_property_rule_seller" model="ir.rule">
            <field name="name">seller Property</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[('salesperson_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('real_estate.group_real_estate_seller'))]"/>
        </record>
<!--
        <record id="real_estate_property_rule_admin" model="ir.rule">
            <field name="name">admin Property</field>
            <field name="model_id" ref="model_estate_property"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" ref="[(4, ref('real_estate.group_real_estate_adminSS'))]"/>
        </record> -->

    </data>
</odoo>