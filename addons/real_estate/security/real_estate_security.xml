<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_real_estate">
            <field name="name">Estate</field>
            <field name="description">helps to handle buying and selling</field>
            <field name="sequence">10</field>
        </record>

        <record model="ir.module.category" id="module_category_real_estate2">
            <field name="name">Real Estate</field>
            <field name="description">helps to manage buying and selling</field>
            <field name="parent_id" ref="module_category_real_estate"/>
        </record>

        <!-- Access Rights -->
        <record id="group_real_estate_buyer" model="res.groups">
            <field name="name">buyer</field>
            <field name="category_id" ref="module_category_real_estate2"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_real_estate_seller" model="res.groups">
            <field name="name">seller</field>
            <field name="category_id" ref="module_category_real_estate2"/>
            <field name="implied_ids" eval="[(4, ref('group_real_estate_buyer'))]"/>
        </record>

    </data>
</odoo>