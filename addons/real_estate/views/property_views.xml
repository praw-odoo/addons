<?xml version='1.0' encoding="utf-8"?>
<odoo>
    <data>

        <record id="estate_property_tree" model="ir.ui.view">
        <!-- tree view -->
            <field name="name">estate.property.tree"</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="garden_area"/>
                </tree>
            </field>
        </record>

        <!-- calendar view  -->

        <record id="estate_property_calender" model="ir.ui.view">
            <field name="name">estate.property.calendar</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <calendar string="" date_start="date_availability" color="date_availability">
                    <field name="name"/>
                    <field name="property_type_id"/>
                </calendar>
            </field>
        </record>

        <!-- search view -->

        <record id="estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <field name="date_availability" />
                    <field name="selling_price" />
                    <filter name="check Price" string="check Price" domain="[('expected_price', '=', '500000')]" />
                    <separator colspan="4" />
                    <filter name="bedrooms count" string="bedrooms count" domain="[('bedrooms', '=', '2')]" />    
                    <group name="name" string="string">
                        <filter name="post code" string="post code" context="{'group_by': 'postcode'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="sold_property" type="object" string="SOLD"/>
                        <button name="cancel_property" type="object" string="CANCEL"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,offer recieved,offer accepted,canceled,sold"/>
                        <!-- <field name="state" widget="statusbar" statusbar_visible="new,confirm,cancel"/> -->
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="property_type_id"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                           
                                <field name="postcode"/>
                                <field name="date_availability"/>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                                <field name="best_price"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="offers">
                                <field name="offer_ids"/>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesperson_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="estate_property_graph" model="ir.ui.view">
            <field name="name">estate.property.graph</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <graph string="" type="bar">
                    <field name="name"/>
                    <!-- <field name="expected_price"/> -->
                    <!-- <field name="bedrooms"/> -->
                </graph>
            </field>
        </record>

        <record id="estate_property_pivot" model="ir.ui.view">
            <field name="name">estate.property.pivot</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <pivot string="" disable_linking="true">
                    <field name="name" type="row"/>
                    <field name="expected_price" interval="month" type="col"/> 
                </pivot>
            </field>
        </record>

        <record id="estate_property_view_gantt" model="ir.ui.view">
            <field name="name">estate.property.view.gantt</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <gantt date_start="date_availability" date_stop="date_end">
                    <field name="garden"/>
                </gantt>
            </field>
        </record>
