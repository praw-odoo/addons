    <template id="qweb_template_table_body" name="table body">
        <t t-set="sr_no" t-value="1"/>
                    <tr t-att-class="sr_no % 2 == 0 and 'o_even' or 'o_odd'" t-attf-style="background-color: #{colors.get(sr_no, 'pink')}" t-foreach="propertys" t-as="property">
                        <td><span t-out="sr_no"/></td>
                        <td><a t-attf-href="/property_details/#{property.id}"><span t-out="property.name"/></a></td>
                        <!-- <td><span t-out="property.description"/></td> -->
                        <td><span t-out="property.postcode"/></td>
                        <td><span t-out="property.date_availability"/></td>
                        <!-- <td><span t-out="property.date_end"/></td> -->
                        <td><span t-out="property.expected_price"/></td>
                        <!-- <td><span t-out="property.selling_price"/></td> -->
                        <td><span t-out="property.bedrooms"/></td>
                        <td><span t-out="property.living_area"/></td>
                        <!-- <td><span t-out="property.facades"/></td> -->
                        <td><span t-out="property.garage"/></td>
                        <td><span t-out="property.garden"/></td>
                        <!-- <td><span t-out="property.garden_area"/></td> -->
                        <td><span t-out="property.garden_orientation"/></td>
                        <td><span t-out="property.active"/></td>
                        <td><span t-out="property.state"/></td>
                        <t t-set="sr_no" t-value="sr_no + 1"/>
                    </tr>
    </template>

